<div class="container p-4">
    <div class="row">
        {{#each events}}
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <a href="{{tipo}}" target="_blank">
                        <h3 class="card-title text-uppercase">
                            {{nombre}}
                        </h3>
                    </a>
                    <p class="m-2">{{categoria}}</p>
                    <a class="btn btn-success" href="/events/detalle/{{id}}">
                        List Event
                    </a>
                    <a class="btn btn-danger" href="/events/delete/{{id}}">
                        Delete Event
                    </a>
                    <a class="btn btn-secondary" href="/events/edit/{{id}}">
                        Edit Event
                    </a>
                </div>
            </div>
        </div>
        {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <p>There are not events saved yet.</p>
                <a href="/events/add">Create One!</a>
            </div>
        </div>
        {{/each}}
    </div>
</div>